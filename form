        private void pictureBox14_Click(object sender, EventArgs e)
        {
            leblClick.Visible = false;
            Dice.Image = DicePlay;
            timerDice.Start();
            
        }

        private void timer1_Tick(object sender, EventArgs e)
        {

            PICtimer.Visible = false;
            picture.Image = upPicture;
            timerpic.Stop();
            leblClick.Visible = true;
        }

        private void timerDice_Tick(object sender, EventArgs e)
        {
            int rn=rnd.Next(0, 7);
            switch (rn)
            {
                case 1:
                    Dice.Image = Dice1;
                    QBox1.Visible = false;
                    Qlabel1.Text = "Questions1";
                    ShowQuestion(rn);
                    break;
                case 2:
                    Dice.Image = Dice2;
                    QBox2.Visible = false;
                    Qlabel2.Text = "Questions2";
                    ShowQuestion(rn);
                    break;
                case 3:
                    Dice.Image = Dice3;
                    QBox3.Visible = false;
                    Qlabel3.Text = "Questions3";
                    break;
                case 4:
                    Dice.Image = Dice4;
                    QBox4.Visible = false;
                    Qlabel4.Text = "Questions4";
                    ShowQuestion(rn);
                    break;
                case 5:
                    Dice.Image = Dice5;
                    QBox5.Visible = false;
                    Qlabel5.Text = "Questions5";
                    ShowQuestion(rn);
                    break;
                case 6:
                    Dice.Image = Dice6;
                    QBox6.Visible = false;
                    Qlabel6.Text = "Questions6";
                    ShowQuestion(rn);
                    break;
            }
            timerDice.Stop();
        }

